        var map_center_position = {lat: 50.357139, lng: 4.433039};
        var position_marker1 = {lat: 50.357139, lng: 4.433039};
        var map_center_zoom = 13;
        var map_center_zoom_click = 17;

        // Maps
        var map = new google.maps.Map(document.getElementById('map'), {
